{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "jsx": "preserve",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
